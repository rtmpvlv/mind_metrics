{
  "compilerOptions": {
    "skipLibCheck": true,
    "strict": false,
    "resolveJsonModule": true,
    "module": "esnext",
    "target": "es5",
    "jsx": "react",
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": false,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["frontend/*"]
    }
  },
  "exclude": ["node_modules", "**/*.test.ts", "**/snapshots.ts", "**/prepare.ts"],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    },
  "include": ["src", "custom.d.ts"],
  }
}
